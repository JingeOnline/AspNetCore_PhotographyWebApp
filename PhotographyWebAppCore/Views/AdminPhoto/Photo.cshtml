@using PhotographyWebAppCore.Models
@model List<Photo>
<h1>照片</h1>

<h4>当前所有照片</h4>
<hr />
@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        @foreach (Photo photo in Model)
        {
            <div class="col-lg-2 col-md-3 mb-3">
                <div class="card">
                    <img class="card-img-top" src="/@photo.Path_Small" alt="Card image cap">
                    <div class="card-footer">
                        <h5 class="card-title">@photo.Title</h5>
                        <p class="card-text">@photo.Description</p>
                        <p class="card-text"><small class="text-muted">上传时间：@photo.UploadDateTime.ToLocalTime()</small></p>
                        <form method="post">
                            <button class="btn btn-outline-primary" name="id" value="@photo.Id" asp-action="DeleteOneById">删除</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="text-center mb-5">
    <a asp-action="AddOnePhoto" class="btn btn-primary text-center">+ 添加新照片</a>
</div>