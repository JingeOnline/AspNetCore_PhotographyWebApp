@model PhotographyWebAppCore.Models.PhotoCategory

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>类型</h1>

<h4>修改类型</h4>
<hr />
<div class="row">
    <div class="col-md-10 mx-auto">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">修改成功！</h4>
                <p><a asp-action="Category">点击此处</a> 返回类型列表</p>
            </div>
        }
        <form asp-action="UpdateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Category" class="btn btn-danger">取消</a>
            </div>
        </form>
    </div>
</div>

